@model CoriPuno.Entidad.PoligonoEntidad
@{
    ViewBag.Title = @ViewBag.TituloPagina;
}

<h1>@ViewBag.TituloPagina</h1>
<div class="container">

    <form class="well form-horizontal" action=" " method="post" id="contact_form">
        <fieldset>
            @Html.HiddenFor(model => model.Id_Poligono)
            <!-- Text input-->
            <div class="form-group">
                <label for="Descripcion" class="col-md-4 control-label">Descripcion:</label>
                <div class="col-md-4 inputGroupContainer">
                    <div class="input-group">
                        @Html.TextBoxFor(model => model.Descripcion, new { @class = "form-control", @maxlength = "20" })
                    </div>
                </div>
            </div>

            <!-- Select Basic -->
            <div class="form-group">
                <label for="Id_Mina" class="col-md-4 control-label">Mina:</label>
                <div class="col-md-4 selectContainer">
                    <div class="input-group">
                        @Html.DropDownListFor(model => model.Mina.Id_Mina, new SelectList(ViewBag.ListaMinas, "Id_Mina", "Descripcion"), "Seleccionar", new { @class = "form-control" })

                    </div>
                </div>
            </div>
            <!-- Select Basic -->
            <div class="form-group">
                <label for="Id_Area" class="col-md-4 control-label">Area:</label>
                <div class="col-md-4 selectContainer">
                    <div class="input-group">
                        @Html.DropDownListFor(model => model.Area.Id_Area, new SelectList(ViewBag.ListaAreas, "Id_Area", "Descripcion"), "Seleccionar", new { @class = "form-control" })

                    </div>
                </div>
            </div>
            <!-- Select Basic -->
            <div class="form-group">
                <label for="Id_Area" class="col-md-4 control-label">Area:</label>
                <div class="col-md-4 selectContainer">
                    <div class="input-group">
                        @Html.DropDownListFor(model => model.Zona.Id_Zona, new SelectList(ViewBag.ListaZonas, "Id_Zona", "Descripcion"), "Seleccionar", new { @class = "form-control" })

                    </div>
                </div>
            </div>

            <div class="alert alert-danger text-left" id="Message-Error">
                <strong></strong>
            </div>
            <div class="alert alert-success text-left" id="Message-OK">
                <strong></strong>
            </div>
            <!-- Button -->
            <div class="form-group">
                <label class="col-md-3 control-label"></label>
                <div class="col-md-3">
                    <input type="submit" id="btn-modificar" class="btn btn-primary" value="Grabar" />
                </div>
                <div class="col-md-3">
                    <a href="@Url.Action("Index","Poligono")" class="btn btn-warning">Regresar</a>
                </div>

            </div>
        </fieldset>
    </form>




</div>

@Scripts.Render("~/bundles/mantenimiento-poligono")

