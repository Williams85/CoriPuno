@model List<CoriPuno.Entidad.VehiculoEntidad>
    @{
        ViewBag.Title = "_ResultadosBusqueda";
    }

    @if (Model != null && Model.Count > 0)
    {

        <table id="keywords" cellspacing="0" cellpadding="0">
            <thead>
                <tr>
                    <th><span>Placa</span></th>
                    <th><span>Tara</span></th>
                    <th><span>Capacidad</span></th>
                    <th><span>Contrata</span></th>
                    <th><span>Marca</span></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th>@item.Placa</th>
                        <th>@item.Tara</th>
                        <td>@item.Capacidad</td>
                        <td>@item.Razon_Social</td>
                        <td>@item.Marca</td>
                        <td>
                            @using (Html.BeginForm("Edicion", "Vehiculo", FormMethod.Post, new { @role = "form" }))
                            {
                                <input type="hidden" id="Codigo" name="Codigo" value="@item.IdVehiculo" />
                                <button type="submit" class="btn btn-primary btn-sm"><span class="separarboton glyphicon glyphicon-pencil"></span>Editar</button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }



