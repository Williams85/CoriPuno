@model List<CoriPuno.Entidad.ComponenteEntidad>
    @{
        ViewBag.Title = "_ResultadosBusqueda";
    }

    @if (Model != null && Model.Count > 0)
    {

        <table id="keywords" cellspacing="0" cellpadding="0">
            <thead>
                <tr>
                    <th><span>Componente</span></th>
                    <th align="center" ><span>Sigla</span></th>
                    <th align="center"><span>Unidad Medida</span></th>
                    <th align="center"><span>Fuente</span></th>
                    <th align="center"><span>Procedimiento</span></th>
                    <th align="center"><span>Estado</span></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Descripcion</td>
                        <td align="center">@item.Sigla</td>
                        <td align="center">@item.UnidadMedida</td>
                        <td align="center">@item.Fuente</td>
                        <td align="center">@item.Procedimiento</td>
                        <td align="center">@item.Estado</td>
                        <td>
                            @using (Html.BeginForm("Edicion", "Componente", FormMethod.Post, new { @role = "form" }))
                            {
                                <input type="hidden" id="Codigo" name="Codigo" value="@item.Id_Componente" />
                                <button type="submit" class="btn btn-primary btn-sm"><span class="separarboton glyphicon glyphicon-pencil"></span>Editar</button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }




