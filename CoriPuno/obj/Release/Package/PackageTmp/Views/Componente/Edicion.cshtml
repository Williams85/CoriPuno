@model CoriPuno.Entidad.ComponenteEntidad
    @{
        ViewBag.Title = "Edicion";
    }

<h1>@ViewBag.TituloPagina</h1>
<div class="container">

    <form class="well form-horizontal" action=" " method="post" id="contact_form">
        <fieldset>
            @Html.HiddenFor(model => model.Id_Componente)
            <!-- Text input-->
            <div class="form-group">
                <label for="Placa" class="col-md-4 control-label">Componente:</label>
                <div class="col-md-4 inputGroupContainer">
                    <div class="input-group">
                        @Html.TextBoxFor(model => model.Descripcion, new { @class = "form-control", @maxlength = "100"})
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label for="Tara" class="col-md-4 control-label">Sigla:</label>
                <div class="col-md-4 inputGroupContainer">
                    <div class="input-group">
                        @Html.TextBoxFor(model => model.Sigla, new { @class = "form-control", @maxlength = "20" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label for="Capacidad" class="col-md-4 control-label">Und. Medida:</label>
                <div class="col-md-4 inputGroupContainer">
                    <div class="input-group">
                        @Html.TextBoxFor(model => model.UnidadMedida, new { @class = "form-control", @maxlength = "20" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label for="Marca" class="col-md-4 control-label">Fuente:</label>
                <div class="col-md-4 inputGroupContainer">
                    <div class="input-group">
                        @Html.DropDownListFor(model => model.Fuente, new SelectList(new List<SelectListItem> { 
                           new SelectListItem { Text = "Manual", Value = "1" },
                           new SelectListItem { Text = "Procedimiento", Value = "2" }
                            }, "Value", "Text"), null, new { @class = "form-control" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label for="Marca" class="col-md-4 control-label">Procedimiento:</label>
                <div class="col-md-4 inputGroupContainer">
                    <div class="input-group">
                        @Html.TextBoxFor(model => model.Procedimiento, new { @class = "form-control", @maxlength = "200" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="Marca" class="col-md-4 control-label">Estado:</label>
                <div class="col-md-4 inputGroupContainer">
                    <div class="input-group">
                        @Html.DropDownListFor(model => model.Estado, new SelectList(new List<SelectListItem> {
                           new SelectListItem { Text = "Activo", Value = "A" },
                           new SelectListItem { Text = "Inactivo", Value = "D" }
                            }, "Value", "Text"), null, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="alert alert-danger text-left" id="Message-Error">
                <strong></strong>
            </div>
            <div class="alert alert-success text-left" id="Message-OK">
                <strong></strong>
            </div>
            <!-- Button -->
            <div class="form-group">
                <label class="col-md-3 control-label"></label>
                <div class="col-md-3">
                    <input type="submit" id="btn-modificar" class="btn btn-primary" value="Grabar" />
                </div>
                <div class="col-md-3">
                    <a href="@Url.Action("Index","Componente")" class="btn btn-warning">Regresar</a>
                </div>

            </div>
        </fieldset>
    </form>




</div>

@Scripts.Render("~/bundles/mantenimiento-componente")

