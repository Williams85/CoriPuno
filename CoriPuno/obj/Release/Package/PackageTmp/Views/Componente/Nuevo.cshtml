
@{
    ViewBag.Title = "Nuevo";
}

<h1>@ViewBag.TituloPagina</h1>
<div class="container">

    <form class="well form-horizontal" action=" " method="post" id="contact_form">
        <fieldset>
            <!-- Text input-->
            <div class="form-group">
                <label for="Placa" class="col-md-4 control-label">Componente:</label>
                <div class="col-md-4 inputGroupContainer">
                    <div class="input-group">
                        <input type="text" name="Descripcion" id="Descripcion" placeholder="Componente" class="form-control" maxlength="100">
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label for="Tara" class="col-md-4 control-label">Sigla:</label>
                <div class="col-md-4 inputGroupContainer">
                    <div class="input-group">
                        <input type="text" name="Sigla" id="Sigla" placeholder="Sigla" class="form-control" maxlength="20">
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label for="Capacidad" class="col-md-4 control-label">Und. Medida:</label>
                <div class="col-md-4 inputGroupContainer">
                    <div class="input-group">
                        <input type="text" name="UndMedidad" id="UndMedidad" placeholder="Unidad Medida" class="form-control" maxlength="20">
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label for="Marca" class="col-md-4 control-label">Fuente:</label>
                <div class="col-md-4 inputGroupContainer">
                    <div class="input-group">
                        <select id="Fuente" name="Fuente" class="form-control">
                            <option value="1" selected>Manual</option>
                            <option value="2">Procedimiento</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label for="Marca" class="col-md-4 control-label">Procedimiento:</label>
                <div class="col-md-4 inputGroupContainer">
                    <div class="input-group">
                        <input type="text" name="Procedimiento" id="Procedimiento" placeholder="Procedimiento" class="form-control" maxlength="200">
                    </div>
                </div>
            </div>

            <div class="alert alert-danger text-left" id="Message-Error">
                <strong></strong>
            </div>
            <div class="alert alert-success text-left" id="Message-OK">
                <strong></strong>
            </div>
            <!-- Button -->
            <div class="form-group">
                <label class="col-md-3 control-label"></label>
                <div class="col-md-3">
                    <input type="submit" id="btn-grabar" class="btn btn-primary" value="Grabar" />
                </div>
                <div class="col-md-3">
                    <a href="@Url.Action("Index","Componente")" class="btn btn-warning">Regresar</a>
                </div>

            </div>
        </fieldset>
    </form>




</div>

@Scripts.Render("~/bundles/mantenimiento-componente")

