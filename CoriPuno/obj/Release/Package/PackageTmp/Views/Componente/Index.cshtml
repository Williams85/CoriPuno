
@{
    ViewBag.Title = "Index";
}

<h1>@ViewBag.TituloPagina</h1>
<div class="container">

    <form class="well form-horizontal" action=" " method="post" id="contact_form">
        <fieldset>
            <!-- Text input-->
            <div class="form-group">
                <label class="col-md-6 control-label">Componente:</label>
                <div class="col-md-6 inputGroupContainer">
                    <div class="input-group">
                        <input type="text" name="Descripcion" id="Descripcion" placeholder="Componente" class="form-control">
                    </div>
                </div>
            </div>
            <!-- Select Basic -->
            <div class="form-group">
                <label class="col-md-6 control-label">Sigla:</label>
                <div class="col-md-6 inputGroupContainer">
                    <div class="input-group">
                        <input type="text" name="Sigla" id="Sigla" placeholder="Sigla" class="form-control">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-6 control-label">Und. Medida:</label>
                <div class="col-md-6 inputGroupContainer">
                    <div class="input-group">
                        <input type="text" name="UndMedidad" id="UndMedidad" placeholder="unidad Medida" class="form-control">
                    </div>
                </div>
            </div>

            <!-- Button -->
            <div class="form-group">
                <label class="col-md-3 control-label"></label>
                <div class="col-md-3 text-right">
                    <input type="submit" id="btn-buscar" class="btn btn-primary" value="Buscar" />
                </div>
                <div class="col-md-3 text-left">
                    <a href="@Url.Action("Nuevo","Componente")" class="btn btn-warning">Nuevo</a>
                </div>
                <label class="col-md-3 control-label"></label>
            </div>
        </fieldset>
    </form>




</div>
<div id="IdResultado">

</div>

@Scripts.Render("~/bundles/mantenimiento-componente")

