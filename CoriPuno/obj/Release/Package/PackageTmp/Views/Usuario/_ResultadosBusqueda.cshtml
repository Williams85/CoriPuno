@model List<CoriPuno.Entidad.UsuarioEntidad>
@{
    ViewBag.Title = "_ResultadosBusqueda";
}

@if (Model != null && Model.Count > 0)
{

    <table id="keywords" cellspacing="0" cellpadding="0">
        <thead>
            <tr>
                <th><span>Usuario</span></th>
                <th><span>Perfil Usuario</span></th>
                <th><span>Perfil</span></th>
                <th><span>Activo</span></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>@item.Nom_Usuario</th>
                    <th>@item.Perfil_Usuario</th>
                    <td>@item.Perfil.Nom_Perfil</td>
                    <td>
                            @if (item.Activo == true)
                            {
                                <input type="checkbox" checked disabled>
                            }
                            else
                            {
                                <input type="checkbox" disabled>
                            }
                        </td>
                    <td>
                        @using (Html.BeginForm("Edicion", "Usuario", FormMethod.Post, new { @role = "form" }))
                        {
                            <input type="hidden" id="Codigo" name="Codigo" value="@item.Id_Usuario" />
                            <button type="submit" class="btn btn-primary btn-sm"><span class="separarboton glyphicon glyphicon-pencil"></span>Editar</button>
                        }
                    </td>

                </tr>
            }
        </tbody>
    </table>
}
