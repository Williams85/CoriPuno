@model List<CoriPuno.Entidad.ZonaEntidad>
@{
    ViewBag.Title = "_ResultadosBusqueda";
}

@if (Model != null && Model.Count > 0)
{

    <table id="keywords" cellspacing="0" cellpadding="0">
        <thead>
            <tr>
                <th><span>Zona</span></th>
                <th><span>Area</span></th>
                <th><span>Mina</span></th>
                <th><span>Fecha Inicio</span></th>
                <th><span>Estado</span></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>@item.Descripcion</th>
                    <th>@item.Area.Descripcion</th>
                    <td>@item.Mina.Descripcion</td>
                    <td>@item.Fec_Inicio</td>
                    <td>
                        @if (item.Estado == "1")
                        {
                            <input type="checkbox" checked disabled>
                        }
                        else
                        {
                            <input type="checkbox" disabled>
                        }
                    </td>
                    <td>
                        @using (Html.BeginForm("Edicion", "Zona", FormMethod.Post, new { @role = "form" }))
                        {
                            <input type="hidden" id="Codigo" name="Codigo" value="@item.Id_Zona" />
                            <button type="submit" class="btn btn-primary btn-sm"><span class="separarboton glyphicon glyphicon-pencil"></span>Editar</button>
                        }
                    </td>

                </tr>
            }
        </tbody>
    </table>
}


